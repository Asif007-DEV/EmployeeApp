<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <% if(success !="") { %>
        <div class="alert alert-success" style="width: 100%; margin-top: 40px;">
          <strong>Success!</strong><%= success %>
        </div>
        <% } %>
        <h1>Filter Employee Records</h1>
        <div class="col-md-12">
          <form action="/search/" id="EmployeeForm" class="form-horizontal" method="post" role="form">
            <div >
            <div class="col-md-3">
              <div class="form-group">
                <label for="name" class="col-md-12 control-label">By Name</label>
                <div class="col-md-12">
                  <input type="text" class="form-control" name="fltrname" placeholder="Enter your Name">
                </div>
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <label for="email" class="col-md-12 control-label">By Email</label>
                <div class="col-md-12">
                  <input type="text" class="form-control" name="fltremail" placeholder="Enter your Email"> 
                </div>
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <label for="emptype" class="col-md-12 control-label">By Employee type</label>
                <div class="col-md-12">
                  <select class="form-control" name="fltremptype">
                    <option>Hourly</option>
                    <option>Fixed</option>
                  </select>
                </div>
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <label for="email" class="col-md-12 control-label">&nbsp;</label>
                <div class="col-md-12">
                  <input type="submit" class="form-control btn btn-primary" name="submir"> 
                </div>
              </div>
            </div>
            </div>
          </form>
        </div>
      </div>
    </div>


    <div class="container">
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <table style="width: 100%;" class="text-center">
      <thead>
        <tr style="border-bottom: 3px solid;" >
          <th>Name</th>
          <th>Email</th>
          <th>E. Type</th>
          <th>Hourlyrate</th>
          <th>TotalHour</th>
          <th>Total</th>
          <th>Actions</th>
        </tr>
      </thead>
        <% if(records.length>0){%>
        <% records.forEach(function(row){%>
        <tr style="border-bottom: 1.5px solid gray; font-weight: bolder;">
          <td><%= row.name %></td>
          <td><%= row.email %></td>
          <td><%= row.etype %></td>
          <td><%= row.hourlyrate %></td>
          <td><%= row.totalHour %></td>
          <td><%= row.total %></td>
          <td>
            <a class="btn btn-primary btn-sm"href="/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
            <a class="btn btn-danger btn-sm" href="/delete/<%= row._id %>"><i class="fa fa-trash"></i></a>
          </td>
        </tr>
      <% })}else{%>
        <tr style="border-bottom: 1.5px solid gray; font-weight: bolder;">
          <td colspan="6">No Record Found</td>  
        </tr>
        <% } %>  
    </table>
  </div>

  <div class="container">
    <div class="row">
      <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
          <div class="panel-heading">
            <div class="panel-title">Employee Details Form</div>
            <div style="float: right; font-size: 85%; position: relative; top: -10px;" ></div>
          </div>
          <div class="panel-body">
            <form action="/" class="form-horizontal" role="form" method="post">
            
              <div id="signupalert" style="display: none;" class="alert alert-danger">
                <p>Error:</p>
                <span></span>
              </div>

              <div class="form-group">
                <label for="name" class="col-md-3 control-label">Name</label>
                <div class="col-md-9">
                  <input type="text" class="form-control" name="uname" placeholder="Enter your name">
                </div>
              </div>

              <div class="form-group">
                <label for="email" class="col-md-3 control-label">Email</label>
                <div class="col-md-9">
                  <input type="text" class="form-control" name="email" placeholder="Enter your email">
                </div>
              </div>

              <div class="form-group">
                <label for="emptype" class="col-md-3 control-label">Hourly Rate</label>
                <div class="col-md-9">
                  <select class="form-control" name="emptype">
                    <option value="Hourly">Hourly</option>
                    <option value="Fixed">Fixed</option>
                  </select>
                </div> 
              </div>
              
              <div class="form-group">
                <label for="hrlyrate" class="col-md-3 control-label">Hourly Rate</label>
                <div class="col-md-9">
                  <input type="text" class="form-control" name="hrlyrate" placeholder="Enter Hourly Rate">
                </div>
              </div>

              <div class="form-group">
                <label for="ttlhr" class="col-md-3 control-label">Total Hour</label>
                <div class="col-md-9">
                  <input type="text" class="form-control" name="ttlhr" placeholder="Enter Total Hour">
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-9">
                  <input type="submit" type="button" class="btn btn-info" value="Submit">
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>


  </body>
</html>
